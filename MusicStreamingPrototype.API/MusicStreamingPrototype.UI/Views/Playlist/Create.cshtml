@model MusicStreamingPrototype.UI.Models.PlaylistViewModel

@{
    ViewData["Title"] = "Yeni Çalma Listesi Oluştur";
}

<h2 class="mt-4">@ViewData["Title"]</h2>

<div asp-validation-summary="All" class="text-danger mb-3"></div>

<form asp-controller="Playlist" asp-action="Create" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Liste Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Oluştur</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
