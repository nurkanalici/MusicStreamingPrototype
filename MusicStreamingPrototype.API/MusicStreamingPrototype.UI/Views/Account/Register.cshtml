@model MusicStreamingPrototype.UI.Models.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2 class="mt-4">Kayıt Ol</h2>

<form asp-action="Register" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Password" class="form-label">Parola</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ConfirmPassword" class="form-label">Parola (Tekrar)</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kayıt Ol</button>
</form>

<p class="mt-3">
    Zaten hesabın var mı? <a asp-action="Login">Giriş Yap</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
