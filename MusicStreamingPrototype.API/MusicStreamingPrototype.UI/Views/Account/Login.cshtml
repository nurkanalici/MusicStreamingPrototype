@model MusicStreamingPrototype.UI.Models.LoginViewModel

<h2 class="mt-4">Giriş Yap</h2>

<form asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input asp-for="ReturnUrl" type="hidden" />

    <div class="form-group mb-3">
        <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Password" class="form-label">Parola</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Giriş Yap</button>
</form>

<p class="mt-3">
    Henüz hesabın yok mu? <a asp-action="Register">Kayıt Ol</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
